{
  "version": 2,
  "builds": [
    {
      "src": "next.config.js",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "DATABASE_HOST": "your-database-host",
    "DATABASE_USER": "your-database-username",
    "DATABASE_PASSWORD": "your-database-password",
    "DATABASE_NAME": "your-database-name"
  }
}